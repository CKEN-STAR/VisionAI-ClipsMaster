{
  "version_info": {
    "major": 1,
    "minor": 0,
    "patch": 0,
    "build": "dev",
    "release_date": null
  },
  "version_control": {
    "branch_strategy": {
      "main": {
        "protected": true,
        "require_review": true,
        "auto_deploy": false
      },
      "development": {
        "protected": false,
        "require_review": true,
        "auto_deploy": false
      },
      "feature": {
        "prefix": "feature/",
        "require_review": true,
        "auto_cleanup": true
      }
    },
    "commit_rules": {
      "conventional_commits": true,
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore"
      ],
      "scope_required": false,
      "body_required": false
    }
  },
  "release_control": {
    "environments": {
      "development": {
        "auto_deploy": true,
        "require_tests": true
      },
      "staging": {
        "auto_deploy": false,
        "require_tests": true,
        "require_approval": true
      },
      "production": {
        "auto_deploy": false,
        "require_tests": true,
        "require_approval": true,
        "approval_levels": 2
      }
    },
    "deployment_rules": {
      "require_changelog": true,
      "require_version_bump": true,
      "allow_rollback": true,
      "backup_before_deploy": true
    }
  },
  "configuration_management": {
    "track_config_changes": true,
    "config_validation": {
      "enabled": true,
      "schema_validation": true,
      "semantic_validation": true
    },
    "sensitive_configs": {
      "encryption_required": true,
      "require_secure_storage": true
    }
  },
  "audit_trail": {
    "enabled": true,
    "track_events": [
      "version_change",
      "config_update",
      "deployment",
      "rollback",
      "security_policy_change"
    ],
    "retention_period": 90
  }
} 