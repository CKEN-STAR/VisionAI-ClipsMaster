{
  "core": {
    "max_memory": 3800,
    "timeout": 30,
    "parallel": 4,
    "retries": 2,
    "skip_slow": false,
    "skip_gpu": false,
    "collect_metrics": true
  },
  "paths": {
    "golden_samples": "tests/golden_samples/",
    "temp_output": "tests/tmp_output/",
    "reports": "tests/reports/",
    "fixtures": "tests/fixtures/",
    "logs": "tests/logs/"
  },
  "models": {
    "chinese": {
      "enabled": true,
      "model_path": "models/qwen2.5-7b-chat",
      "test_prompts_path": "tests/chinese_model/prompts",
      "quantization": "int8"
    },
    "english": {
      "enabled": false,
      "model_path": "models/mistral-7b",
      "test_prompts_path": "tests/english_model/prompts",
      "quantization": "int8"
    }
  },
  "video": {
    "formats": [
      "mp4",
      "mkv",
      "avi"
    ],
    "max_duration": 300,
    "min_resolution": "640x360",
    "test_clips_count": 5,
    "audio_required": true
  },
  "performance": {
    "benchmark_iterations": 5,
    "latency_threshold_ms": 1000,
    "memory_threshold_mb": 3500,
    "monitor_interval_sec": 1,
    "cpu_load_threshold": 0.8,
    "disk_io_threshold_mb": 100
  },
  "collaboration": {
    "simulated_users": 5,
    "operation_delay_ms": 100,
    "conflict_rate": 0.2,
    "sync_interval_ms": 300,
    "message_size_bytes": 1024,
    "test_duration_sec": 60
  },
  "fault_tolerance": {
    "network_drop_rate": 0.05,
    "connection_timeout_sec": 5,
    "storage_failure_sim": true,
    "recovery_check_interval": 1,
    "max_recovery_attempts": 3
  },
  "security": {
    "jwt_test_key": "test_secret_key_for_testing_only",
    "token_expiry_sec": 3600,
    "rate_limit_per_minute": 100,
    "input_validation": true,
    "xss_test": true,
    "sql_injection_test": true
  },
  "memory_optimization": {
    "baseline_memory_mb": 4096,
    "target_memory_mb": 3072,
    "gc_frequency": "aggressive",
    "cache_strategy": "lru",
    "measure_allocation": true,
    "leak_detection": true
  },
  "reporting": {
    "format": [
      "html",
      "json"
    ],
    "include_timestamps": true,
    "include_system_info": true,
    "include_screenshots": true,
    "include_profiling": true,
    "upload_to_dashboard": false
  }
}