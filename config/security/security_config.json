{
  "security_level": "standard",
  "enable_logging": true,
  "log_level": "INFO",
  "max_file_size_gb": 5.0,
  "max_subtitle_lines": 50000,
  "max_subtitle_length": 1000,
  "enable_file_signature_check": true,
  "enable_content_validation": true,
  "checksum_algorithm": "sha256",
  "enable_video_validation": true,
  "enable_timeline_validation": true,
  "integrity_check_timeout": 30,
  "max_retry_attempts": 3,
  "retry_delay": 5.0,
  "enable_checkpoints": true,
  "checkpoint_interval": 300,
  "enable_graceful_degradation": true,
  "enable_watermark_detection": true,
  "watermark_confidence_threshold": 0.7,
  "enable_risk_assessment": true,
  "block_high_risk_content": false,
  "enable_performance_monitoring": true,
  "enable_security_monitoring": true,
  "alert_thresholds": {
    "memory_usage": 0.8,
    "cpu_usage": 0.9,
    "disk_usage": 0.9,
    "error_rate": 0.1
  },
  "max_concurrent_tasks": 5,
  "max_memory_usage_gb": 3.8,
  "enable_resource_monitoring": true
}